extends layout 

block content 
  h2 Messages 

  .messages
    if messages
      each message in messages 
        .message 
          p: a(href=message.url) #{message.title}
          .byline 
            p
              if message.author 
                span: a(href=message.author.url || '/') #{message.author.username || ''} 
                | on 
                span !{message.timestamp.toLocaleString()}

    else 
      p There are no messages.