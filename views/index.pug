extends layout 

block content 
  h2 Messages 

  .messages
    if messages
      each message in messages 
        .message 
          p: a(href=message.url) #{message.title}

          if (message.author && message.timestamp)
            .byline 
              p
                span !{message.author.username} 
                | on
                span  !{message.timestamp.toLocaleString()}

    else 
      p There are no messages.