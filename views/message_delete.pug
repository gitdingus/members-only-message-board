extends layout 

block content 

  if !message
    p There has been a problem displaying the message 
  else 
    p= message.title 
    p= message.body 
    if message.timestamp
      p= message.timestamp 
    if message.author 
      p= message.author.username

  form(method='post' action='')
    p Are you sure you want to delete this message?
    button(type='submit') Delete Message