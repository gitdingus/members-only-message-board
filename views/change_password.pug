extends layout 

block head 
  link(rel='stylesheet' href='/styles/register_form.css')

block content 
  h1 Change Password
  
  if message 
    p= message

  form(method='post' action='')
    label(for='current_password') Current Password: 
    input#current_password(type='password' name='current_password')
    label(for='new_password') New Password: 
    input#new_password(type='password' name='new_password')
    label(for='confirm_new_password') Confirm New Password: 
    input#confirm_new_password(type='password' name='confirm_new_password')
    button(type='submit') Change Password

  if errors 
    each error in errors 
      p= error.msg