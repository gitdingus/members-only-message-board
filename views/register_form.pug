extends layout 

block content 

  form(method='post' action='/register')
    .formfield
      label(for='first_name') First Name: 
      input#first_name(type='text' name='first_name' value=(newUser) ? newUser.firstName : '')
    .formfield 
      label(for='last_name') Last Name: 
      input#last_name(type='text' name='last_name' value=(newUser) ? newUser.lastName : '')
    .formfield 
      label(for='username') Username: 
      input#username(type='text' name='username' value=(newUser) ? newUser.username : '')
    .formfield
      label(for='email') Email Address: 
      input#email(type='text' name='email' value=(newUser) ? newUser.email : '')
    .formfield 
      label(for='password') Password: 
      input#password(type='password' name='password')
    .formfield 
      label(for='confirm_password') Confirm Password: 
      input#confirm_password(type='password' name='confirm_password')
    .formfield
      label(for='member_password') Member Password: 
      input#member_password(type='text' name='member_password')
    button(type='submit') Register!

  if errors 
    each error in errors 
      p= error.msg